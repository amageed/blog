@import 'nib'
@import 'monokai_sublime.css'

a, a:link
    cursor pointer

table
    tfoot, tbody
        th
            border-top 1px solid #DDD

kbd
    background none repeat scroll 0 0 #EEEEEE
    border-color #CCCCCC #AAAAAA #888888 #BBBBBB
    border-style solid
    border-width 1px 3px 3px 1px
    color #000000
    padding 2px 4px
    white-space nowrap

.post .post-date {
    color: #999999;
    margin-bottom: 10px;
}