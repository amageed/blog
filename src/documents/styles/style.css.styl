@import 'nib'
@import 'monokai_sublime.css'

a, a:link
  cursor pointer

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

kbd
  background none repeat scroll 0 0 #EEEEEE
  border-color #CCCCCC #AAAAAA #888888 #BBBBBB
  border-style solid
  border-width 1px 3px 3px 1px
  color #000000
  padding 2px 4px
  white-space nowrap

.post .post-date
  color #999999
  margin-bottom 10px

.social-buttons
  text-align center
.service-button
  display inline-block
  overflow hidden
.hacker-news-submit-button, .google-plus-one-button
  width 80px
.reddit-submit-button
  width 140px
.twitter-tweet-button
  width 100px
.twitter-follow-button
  width 130px

